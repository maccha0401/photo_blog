<!--■ページタイトル-->
<h1>Please LogIn!!</h1>

<!--■ログインのフォーム-->
<%= form_with(scope: :session, url: users_login_path, local: true) do |form| %>
  <div class="container">
    <div class="form_field">
      <div class="row">
        <div class="col-12 offset-md-1 col-md-2"><%= form.label :login_name %></div>
        <div class="offset-1 col-11 offset-md-0 col-md-8"><%= form.text_field :login_name %></div>
      </div>
    </div>
    <div class="form_field">
      <div class="row">
        <div class="col-12 offset-md-1 col-md-2"><%= form.label :password %></div>
        <div class="offset-1 col-11 offset-md-0 col-md-8"><%= form.text_field :password %></div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="offset-1">
        <%= form.submit %>
        <%= link_to "back", :back, type: "button", class: "btn btn-default" %>
      </div>
    </div>
  </div>
<% end %>
